<allergy xmlns="urn:hl7-org:greencda:c32" id="<%=allergy.id%>">
  <%== render partial: "entry_attributes", locals: {entry: allergy, code_sets: ['SNOMED-CT', "RxNorm", "FDA"]}%>
  <% if allergy.type %>
  <%== code_display allergy, "tag_name" => "type", "attribute" => "type", 'preferred_code_sets' => ['RxNorm', 'SNOMED-CT'] %>
  <% end %>
  <% allergy.reaction.each_pair do |system, code| %>
    <reaction code="<%= code.first %>" codeSystem="<%= system %>" />
  <% end %>
  <% if allergy.severity%>
  <%== code_display allergy, "tag_name" => "severity", "attribute" => "severity", 'preferred_code_sets' => ['RxNorm', 'SNOMED-CT'] %>
  <% end %>
</allergy>